<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KRAM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CloneProm.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex align-items-center">
                <div class="header-left d-flex align-items-center me-3">
                    <a class="navbar-brand site-brand fw-bold text-dark mb-0"
                       asp-controller="Home" asp-action="Index">kram</a>
                </div>

                <div class="header-center flex-fill d-flex justify-content-center">
                    <form class="search-form w-75" asp-controller="Home" asp-action="Index" method="get">
                        <div class="input-group">
                            <input id="searchInput" name="q" value="@(ViewContext.HttpContext.Request.Query["q"].ToString() ?? "")" class="form-control search-input" type="search" placeholder="Я шукаю..." aria-label="Search">
                            <button class="btn btn-search" type="submit">Знайти</button>
                        </div>
                    </form>
                </div>

                <div class="header-right d-flex align-items-center ms-3">
                    <ul class="nav-icons list-unstyled d-flex mb-0 align-items-center gap-3">
                        <li><a class="icon-link" asp-area="Identity" asp-page="/Account/Login">Кабінет</a></li>
                        <li><a class="icon-link" asp-controller="Favorites" asp-action="Index">Бажане</a></li>
                        <li><a class="icon-link" asp-controller="Cart" asp-action="Index">Кошик</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-4 py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - KRAM Marketplace
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
            $(function(){
                // Ajax submit for cart / favorites forms
                $(document).on('submit', '.ajax-cart-form', function(e){
                    e.preventDefault();
                    var $form = $(this);
                    var token = $form.find('input[name="__RequestVerificationToken"]').val();
                    console.log('POST', $form.attr('action'), $form.serialize());
                    $.ajax({
                        url: $form.attr('action'),
                        method: 'POST',
                        data: $form.serialize(),
                        headers: { 'RequestVerificationToken': token, 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .done(function(){
                        // simple feedback
                        $form.find('button').text('Добавлено').prop('disabled', true);
                        setTimeout(function(){ $form.find('button').text('Купить').prop('disabled', false); }, 1500);
                    })
                    .fail(function(xhr, status, err){
                        console.error('Cart AJAX error', status, err, xhr.responseText);
                        alert('Ошибка при добавлении в корзину: ' + (xhr.responseText || status));
                    });
                    return false;
                });

                $(document).on('submit', '.ajax-fav-form', function(e){
                    e.preventDefault();
                    var $form = $(this);
                    var token = $form.find('input[name="__RequestVerificationToken"]').val();
                    console.log('POST', $form.attr('action'), $form.serialize());
                    $.ajax({
                        url: $form.attr('action'),
                        method: 'POST',
                        data: $form.serialize(),
                        headers: { 'RequestVerificationToken': token, 'X-Requested-With': 'XMLHttpRequest' }
                    }).done(function(res){
                        if(res && res.added){
                            $form.find('button').addClass('btn-danger').removeClass('btn-outline-secondary');
                        } else {
                            $form.find('button').addClass('btn-outline-secondary').removeClass('btn-danger');
                        }
                    }).fail(function(xhr, status, err){
                        console.error('Fav AJAX error', status, err, xhr.responseText);
                        alert('Ошибка при добавлении в избранное: ' + (xhr.responseText || status));
                    });
                    return false;
                });
            });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
