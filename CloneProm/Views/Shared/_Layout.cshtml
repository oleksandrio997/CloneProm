<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KRAM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CloneProm.styles.css" asp-append-version="true" />
    <link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header class="site-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex align-items-center">
                <div class="header-left d-flex align-items-center me-3">
                    <a class="navbar-brand site-brand fw-bold text-dark mb-0"
                       asp-controller="Home" asp-action="Index">kram</a>
                </div>

                <div class="header-center flex-fill d-flex justify-content-center">
                    <form class="search-form w-75" asp-controller="Home" asp-action="Index" method="get">
                        <div class="input-group">
                            <input id="searchInput" name="q" value="@(ViewContext.HttpContext.Request.Query["q"].ToString() ?? "")" class="form-control search-input" type="search" placeholder="Я шукаю..." aria-label="Search">
                            <button class="btn btn-search" type="submit">Знайти</button>
                        </div>
                    </form>
                </div>

                <div class="header-right d-flex align-items-center ms-3">
                    <ul class="nav-icons list-unstyled d-flex mb-0 align-items-center gap-3">
                        @using Microsoft.AspNetCore.Identity
                        @using CloneProm.Models
                        @inject SignInManager<ApplicationUser> SignInManager
                        @inject UserManager<ApplicationUser> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li>
                                <a class="icon-link"
                                   asp-controller="Profile"
                                   asp-action="Index">
                                    <i class="bi bi-person"></i>
                                    Кабінет
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="icon-link" href="#" onclick="openLogin()">Login</a>
                            </li>
                            <li>
                                <a class="icon-link" href="#" onclick="openRegister()">Register</a>
                            </li>
                        }

                        <li><a class="icon-link"asp-controller="Profile"asp-action="Index"asp-route-tab="favorites">Бажане</a></li>
                        <li><a class="icon-link" asp-controller="Cart" asp-action="Index">Кошик</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-4 py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - KRAM Marketplace
        </div>
    </footer>

    <!-- ================= SCRIPTS ================= -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function(){
            // Ajax submit for cart / favorites forms
            $(document).on('submit', '.ajax-cart-form', function(e){
                e.preventDefault();
                var $form = $(this);
                var token = $form.find('input[name="__RequestVerificationToken"]').val();
                $.ajax({
                    url: $form.attr('action'),
                    method: 'POST',
                    data: $form.serialize(),
                    headers: { 'RequestVerificationToken': token, 'X-Requested-With': 'XMLHttpRequest' }
                })
                .done(function(){
                    $form.find('button').text('Додано').prop('disabled', true);
                    setTimeout(function(){ $form.find('button').text('Купити').prop('disabled', false); }, 1500);
                })
                .fail(function(xhr, status, err){
                    alert('Помилка при додаванні до кошика: ' + (xhr.responseText || status));
                });
            });

            $(document).on('submit', '.ajax-fav-form', function(e){
                e.preventDefault();
                var $form = $(this);
                var token = $form.find('input[name="__RequestVerificationToken"]').val();
                $.ajax({
                    url: $form.attr('action'),
                    method: 'POST',
                    data: $form.serialize(),
                    headers: { 'RequestVerificationToken': token, 'X-Requested-With': 'XMLHttpRequest' }
                }).done(function(res){
                    if(res && res.added){
                        $form.find('button').addClass('btn-danger').removeClass('btn-outline-secondary');
                    } else {
                        $form.find('button').addClass('btn-outline-secondary').removeClass('btn-danger');
                    }
                }).fail(function(xhr, status, err){
                    alert('Помилка при додаванні до бажаного: ' + (xhr.responseText || status));
                });
            });
        });

        // Sidebar login/register
        function openLogin() {
            document.getElementById("authSidebar").classList.add("active");
            document.getElementById("authOverlay").classList.remove("d-none");
            showLogin();
        }

        function openRegister() {
            document.getElementById("authSidebar").classList.add("active");
            document.getElementById("authOverlay").classList.remove("d-none");
            showRegister();
        }

        function closeAuth() {
            document.getElementById("authSidebar").classList.remove("active");
            document.getElementById("authOverlay").classList.add("d-none");
        }

        function showRegister() {
            document.getElementById("loginForm").classList.add("d-none");
            document.getElementById("registerForm").classList.remove("d-none");
            document.getElementById("authTitle").innerText = "Register";
        }

        function showLogin() {
            document.getElementById("registerForm").classList.add("d-none");
            document.getElementById("loginForm").classList.remove("d-none");
            document.getElementById("authTitle").innerText = "Login";
        }
    </script>

    <!-- ================= AUTH SIDEBAR ================= -->
    <div id="authOverlay" class="auth-overlay d-none"></div>
    <div id="authSidebar" class="auth-sidebar">
        <div class="auth-header">
            <h5 id="authTitle">Login</h5>
            <button type="button" class="auth-close" onclick="closeAuth()">×</button>
        </div>
        <div class="auth-body">
            <div id="loginForm">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <label>Email</label>
                    <input name="Email" type="email" class="auth-input" required />
                    <label>Password</label>
                    <input name="Password" type="password" class="auth-input" required />
                    <button type="submit" class="auth-btn">Login</button>
                    <div class="auth-footer">
                        Don't have an account?
                        <a href="#" onclick="showRegister()">Register</a>
                    </div>
                </form>
            </div>

            <div id="registerForm" class="d-none">
                <form asp-controller="Account" asp-action="Register" method="post">
                    <label>Email</label>
                    <input name="Email" type="email" class="auth-input" required />
                    <label>Full Name</label>
                    <input name="FullName" class="auth-input" required />
                    <label>Password</label>
                    <input name="Password" type="password" class="auth-input" required />
                    <label>Confirm Password</label>
                    <input name="ConfirmPassword" type="password" class="auth-input" required />
                    <button type="submit" class="auth-btn">Register</button>
                    <div class="auth-footer">
                        Already have an account?
                        <a href="#" onclick="showLogin()">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
