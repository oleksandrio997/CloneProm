@model CloneProm.Models.Product
@using System.Globalization

@{
    ViewData["Title"] = Model.Name;

    var finalPrice = Model.Discount > 0
        ? Model.Price - (Model.Price * Model.Discount / 100m)
        : Model.Price;

    var culture = new CultureInfo("uk-UA");
}

<div class="container mt-4 product-page">

    <div class="row">

        <!-- LEFT: GALLERY -->
        <div class="col-lg-6">

            <div class="product-main-image">
                <img id="mainImage"
                     src="@Model.ImagePath"
                     alt="@Model.Name" />
            </div>

            <!-- Якщо зображення одне — не дублюємо -->
            <div class="product-thumbs mt-3 d-flex gap-2">
                <img src="@Model.ImagePath"
                     class="thumb active"
                     onclick="changeImage(this)" />
            </div>

        </div>

        <!-- RIGHT: INFO -->
        <div class="col-lg-6">

            <h4 class="fw-bold">@Model.Name</h4>

            <div class="d-flex align-items-center gap-2 mb-2">
                <div class="rating">★★★★☆</div>
                <small class="text-muted">4.3 • 16 відгуків</small>
            </div>

            <!-- Price -->
            <div class="price-block mt-3">
                @if (Model.Discount > 0)
                {
                    <div class="old-price text-muted text-decoration-line-through">
                        @Model.Price.ToString("N2", culture) грн
                    </div>
                }

                <div class="new-price fs-3 fw-bold text-danger">
                    @finalPrice.ToString("N2", culture) грн
                </div>
            </div>

            <!-- Buttons -->
            <div class="mt-3 d-flex gap-2">
                @if (Model.Quantity > 0)
                {
                    <form asp-controller="Cart"
                          asp-action="AddToCart"
                          method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <button class="btn btn-dark btn-lg px-4">
                            Купити зараз
                        </button>
                    </form>

                    <button class="btn btn-outline-dark btn-lg">
                        Купити
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        Немає в наявності
                    </button>
                }
            </div>

            <div class="delivery-block mt-4 small">
                <div>📦 Доставка: 1-2 дні</div>
                <div>✔ Обмін та повернення</div>
                <div>✔ Гарантія 12 місяців</div>
                <div>✔ Перевірка при отриманні</div>
            </div>

            <div class="seller-block mt-4 p-3 border rounded">
                <div class="fw-bold">Продавець</div>
                <div>@Model.Seller?.ShopName</div>
                <small class="text-muted">98% позитивних відгуків</small>
            </div>

        </div>
    </div>

    <!-- ================= ACCORDION BLOCK ================= -->
    <div class="mt-5">

        <div class="product-accordion">

            <div class="acc-item border-top">
                <div class="acc-header" onclick="toggleAccordion(this)">
                    <span class="acc-icon">+</span>
                    <span class="fw-bold">Характеристики</span>
                </div>

                <div class="acc-body">
                    <div class="spec-row">
                        <div class="spec-name">Назва</div>
                        <div class="spec-value">@Model.Name</div>
                    </div>
                </div>
            </div>

            <div class="acc-item border-top border-bottom">
                <div class="acc-header" onclick="toggleAccordion(this)">
                    <span class="acc-icon">+</span>
                    <span class="fw-bold">Про товар</span>
                </div>

                <div class="acc-body">
                    <p class="mb-0">@Model.Description</p>
                </div>
            </div>

        </div>

    </div>

    <!-- REVIEWS -->
    <div class="mt-5">
        <h5>Відгуки</h5>

        <div class="review-item mt-3">
            <div class="fw-bold">Анна С.</div>
            <div class="text-warning">★★★★★</div>
            <div>Чудовий товар, рекомендую!</div>
        </div>

        <div class="review-item mt-3">
            <div class="fw-bold">Петро М.</div>
            <div class="text-warning">★★★★☆</div>
            <div>Все працює добре.</div>
        </div>
    </div>

    <!-- ================= OTHER SELLERS ================= -->
    <div class="mt-5">
        <h5>Цей товар у інших продавців</h5>

        <div class="row">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-md-4 mb-3">
                    <div class="card p-3">
                        <div class="fw-bold">Інший продавець @(i + 1)</div>
                        <div class="text-danger fw-bold mt-2">
                            @finalPrice.ToString("N2", culture) грн
                        </div>
                        <button class="btn btn-sm btn-outline-dark mt-2">
                            Перейти
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- ================= SIMILAR PRODUCTS ================= -->
    @if (ViewBag.Similar != null && ((List<CloneProm.Models.Product>)ViewBag.Similar).Any())
    {
        <div class="mt-5">
            <h5>Схожі товари</h5>

            <div class="products-grid">
                @foreach (var item in (List<CloneProm.Models.Product>)ViewBag.Similar)
                {
                    <partial name="_ProductCard" model="item" />
                }
            </div>
        </div>
    }

    <!-- ================= VIEWED PRODUCTS ================= -->
    @if (ViewBag.Viewed != null && ((List<CloneProm.Models.Product>)ViewBag.Viewed).Any())
    {
        <div class="mt-5 mb-5">
            <h5>Ви переглядали</h5>

            <div class="products-grid">
                @foreach (var item in (List<CloneProm.Models.Product>)ViewBag.Viewed)
                {
                    <partial name="_ProductCard" model="item" />
                }
            </div>
        </div>
    }

</div>

<style>
    .product-main-image img {
        width: 100%;
        height: 400px;
        object-fit: contain;
        background: #fff;
        border: 1px solid #eee;
        padding: 10px;
    }

    .thumb {
        width: 80px;
        height: 80px;
        object-fit: cover;
        cursor: pointer;
        border: 1px solid #ddd;
        padding: 4px;
        background: #fff;
    }

        .thumb.active {
            border: 2px solid #000;
        }

    .product-accordion .acc-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 15px 0;
        cursor: pointer;
    }

    .product-accordion .acc-icon {
        font-size: 20px;
        width: 20px;
    }

    .product-accordion .acc-body {
        display: none;
        padding-bottom: 15px;
    }

    .product-accordion .acc-item.active .acc-body {
        display: block;
    }

    .spec-row {
        display: flex;
        justify-content: space-between;
        padding: 6px 0;
    }

    .spec-name {
        color: #6c757d;
    }

    .spec-value {
        font-weight: 500;
    }

    .products-grid {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
    }
</style>

<script>
    function toggleAccordion(header) {
        const item = header.parentElement;
        const icon = header.querySelector(".acc-icon");

        item.classList.toggle("active");
        icon.textContent = item.classList.contains("active") ? "−" : "+";
    }

    function changeImage(el) {
        const main = document.getElementById("mainImage");
        main.src = el.src;

        document.querySelectorAll(".thumb").forEach(t => t.classList.remove("active"));
        el.classList.add("active");
    }
</script>