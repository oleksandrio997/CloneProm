@model CloneProm.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row mb-4">
    <div class="col-12 bg-primary text-white p-5 rounded text-center">
        <h1>KRAM Marketplace</h1>
        <p>Buy from trusted sellers</p>
        <a asp-controller="Product"
           asp-action="Catalog"
           class="btn btn-light btn-lg mt-3">
            All products
        </a>
    </div>
</div>

<div class="row">
    <!-- Categories -->
    <div class="col-md-3">
        <h5>Categories</h5>
        <div class="list-group">
            @foreach (var category in Model.Categories)
            {
                <a class="list-group-item list-group-item-action">
                    @category.Name
                </a>
            }
        </div>
    </div>

    <!-- Products -->
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(!string.IsNullOrEmpty(product.ImagePath)
                                                         ? product.ImagePath
                                                         : "https://via.placeholder.com/300x200")"
                         class="card-img-top" />

                        <div class="card-body">
                            <h6>@product.Name</h6>
                            <span class="fw-bold text-danger">
                                @product.Price.ToString("₴0.00")
                            </span>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <a asp-controller="Product"
                               asp-action="Details"
                               asp-route-id="@product.Id"
                               class="btn btn-primary w-100">
                                View
                            </a>
                        </div>
                    </div>
                </div>
                        }
        </div>
    </div>
</div>
