@model CloneProm.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row mb-4">
    <div class="col-12 text-center bg-primary text-white p-5 rounded">
        <h1>Welcome to Kram Marketplace</h1>
        <p>Discover products from trusted sellers</p>
        <a class="btn btn-light btn-lg mt-3" asp-controller="Home" asp-action="Index">Shop Now</a>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <h5>Categories</h5>
        <div class="list-group mb-4">
            <a class="list-group-item list-group-item-action @(Model.SelectedCategoryId == null ? "active" : "")" href="@Url.Action("Index", "Home")">All</a>
            @foreach (var category in Model.Categories)
            {
                var isActive = Model.SelectedCategoryId.HasValue && Model.SelectedCategoryId.Value == category.Id ? "active" : "";
                <a class="list-group-item list-group-item-action @isActive" href="@Url.Action("Index", "Home", new { category = category.Id, q = Model.SearchQuery })">
                    @category.Name
                </a>
            }
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">
            @if (Model.Products != null && Model.Products.Any())
            {
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "https://via.placeholder.com/300x200" : product.ImagePath)" class="card-img-top" alt="@product.Name" style="height:200px;object-fit:cover;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted small">@product.Description</p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong class="text-danger">@product.Price.ToString("C")</strong>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <form asp-controller="Favorites" asp-action="ToggleFavorite" method="post" class="d-inline-block">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <button type="submit" class="btn btn-outline-secondary btn-sm btn-toggle-fav">❤</button>
                                        </form>
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline-block">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm btn-add-cart">Купить</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Fallback demo cards when no products are available -->
                var demo = new[] {
                    new { Name = "Notebook Alpha", Description = "Лёгкий ноутбук для повседневных задач.", Price = 149.99m },
                    new { Name = "Wireless Mouse Mini", Description = "Компактная эргономичная беспроводная мышь.", Price = 24.50m },
                    new { Name = "Mechanical Keyboard X", Description = "Механическая клавиатура с тактильными переключателями.", Price = 89.90m }
                };

                foreach (var p in demo)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="@p.Name" style="height:200px;object-fit:cover;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@p.Name</h5>
                                <p class="card-text text-muted small">@p.Description</p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong class="text-danger">@p.Price.ToString("C")</strong>
                                    </div>
                                    <div>
                                        <button class="btn btn-secondary btn-sm" disabled>Добавить в избранное</button>
                                        <button class="btn btn-primary btn-sm">Купить</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
